<% include ../partials/header %>
<div class="container">
    <h1 style="text-align:center;margin-bottom:30px;">Edit comments</h1>
    <div style="width:30%; margin:0 auto">
        <form  action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
             <div class="form-group">
                <input class="form-control" type="text" value="<%= comment.text %>" name="comment[text]">
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-block">Submit</button>
            </div>
        </form>
        <a href="back">Go back</a>
    </div>
</div>

<% include ../partials/footer %>